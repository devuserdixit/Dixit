<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="#19688B">

        <ImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/sort"/>

        <TextView
            android:layout_marginLeft="@dimen/_23sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_17ssp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Manager"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_marginLeft="@dimen/_33sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/calendar"/>


        <ImageView
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_21sdp"
            android:layout_height="@dimen/_21sdp"
            android:src="@drawable/premium"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/transaction"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

            <TextView
                android:textColor="#19688A"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Transactions"
                android:textSize="@dimen/_20ssp"/>

            <TextView
                android:textColor="#95000000"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please add your transaction"
                android:textSize="@dimen/_15ssp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/loutincome"
        app:cardBackgroundColor="#DAF5FF"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <ImageView
               android:layout_marginLeft="@dimen/_10sdp"
               android:layout_gravity="center"
               android:layout_width="80dp"
               android:layout_height="75dp"
               android:src="@drawable/moneyimage"/>

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="#EB19688B"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD INCOME"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/loutexpenses"
        app:cardBackgroundColor="#D3E7FE"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_9sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:src="@drawable/exp"/>

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="#4B81BE"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD EXPENSES"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/louttransaction"
        app:cardBackgroundColor="#FEEBDC"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_9sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:src="@drawable/trans"/>

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="#E38A44"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD TRANSACTION"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/loutreports"
        app:cardBackgroundColor="#FED9DA"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_9sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:src="@drawable/report"/>

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="#FF7175"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REPORTS"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/loutcategory"
        app:cardBackgroundColor="#FED9DA"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_9sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:src="@drawable/transaction"/>

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:textColor="#FF7175"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Category"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>