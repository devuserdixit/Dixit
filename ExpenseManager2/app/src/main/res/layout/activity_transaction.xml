<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFEAEF"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".TransactionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#19688B"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="13.00dp">

            <ImageView
                android:id="@+id/imgBackTransaction"
                android:layout_width="26.00dp"
                android:layout_height="26.00dp"
                android:src="@drawable/back"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39.00dp"
                android:text="Transactions"
                android:textColor="@color/white"
                android:textSize="26.00dp"/>

            <ImageView
                android:layout_width="20.00dp"
                android:layout_height="20.00dp"
                android:layout_marginLeft="78.00dp"
                android:src="@drawable/filter"/>

            <ImageView
                android:id="@+id/imgDoneTransaction"
                android:src="@drawable/share"
                android:layout_width="23.00dp"
                android:layout_height="23.00dp"
                android:layout_marginLeft="20.00dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center"
            android:layout_marginBottom="6.50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:layout_weight="4.8"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16.90dp"
                android:layout_marginLeft="6.50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:text="$0.00"
                android:textColor="@color/white"
                android:textSize="16.90dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center"
            android:layout_marginBottom="6.50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.8"
                android:text="Income"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16.90dp"
                android:layout_marginLeft="6.50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:text="$0.00"
                android:textColor="@color/white"
                android:textSize="16.90dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center"
            android:layout_marginBottom="6.50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.8"
                android:text="Expenses"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16.90dp"
                android:layout_marginLeft="6.50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="$0.00"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16.90dp"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>