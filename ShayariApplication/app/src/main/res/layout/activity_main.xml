<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutDrawer"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#875A17">

            <ImageView
                android:id="@+id/imgmenu"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/menu"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Shayari"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="#875A17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/logo"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"/>

                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Write your Words..."/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/loutHome"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:text="Home"
                        android:textColor="#875A17"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loutFavorite"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:text="Favorite"
                        android:textColor="#875A17"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loutShare"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:text="Share"
                        android:textColor="#875A17"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />

                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:orientation="vertical"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->

<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="@dimen/_40sdp"-->
<!--                        android:gravity="center"-->
<!--                        android:text=""-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="@dimen/_15ssp"-->
<!--                        android:textStyle="bold" />-->

<!--                    <View-->
<!--                        android:background="@color/black"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="@dimen/_1sdp" />-->

<!--                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/loutSetting"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:text="Setting"
                        android:textColor="#875A17"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loutExit"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:text="Exit"
                        android:textColor="#875A17"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loutPrivacy"
                    android:layout_marginTop="@dimen/_150sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:text="Privacy Policy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>